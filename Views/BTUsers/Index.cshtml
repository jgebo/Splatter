@model IEnumerable<Splatter.Models.BTUser>

@{
    ViewBag.Title = "System Users";
}

<h2>System Users</h2>


<table class="table">
    <tr>
       
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Display Name
        </th>
        <th>
            User Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @Html.HiddenFor(model => item.AspNetUserId)
        
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisplayName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AspNetUserId }) @*|*@
            @*@Html.ActionLink("Delete", "Delete", new { id=item.AspNetUserId })*@
        </td>
    </tr>
}

</table>
